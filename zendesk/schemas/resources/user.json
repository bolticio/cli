    "update": {
        "definition": {
            "qs": {},
            "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/users/{{parameters.user_id}}",
            "body": {
                "user": {
                    "name": "{{parameters.name}}",
                    "role": "{{parameters.role}}",
                    "notes": "{{parameters.notes}}",
                    "details": "{{parameters.details}}",
                    "default_group_id": "{{parameters.default_group_id}}"
                }
            },
            "method": "put",
            "filters": {
                "body": {
                    "allowEmptyArray": false,
                    "allowEmptyValue": false,
                    "allowEmptyObject": false
                }
            },
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.email}}:{{secrets.password}})"
            },
            "response": {
                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data}}"
            }
        },
        "parameters": [
            {
                "meta": {
                    "value": "",
                    "description": "Enter the ID of the user you want to update.",
                    "displayName": "User ID",
                    "displayType": "text",
                    "placeholder": "Enter user ID to be updated"
                },
                "name": "user_id"
            },
            {
                "meta": {
                    "validation": {
                        "required": true
                    },
                    "description": "Enter the name of the user to be updated",
                    "displayName": "Name",
                    "displayType": "text",
                    "placeholder": "Enter user name"
                },
                "name": "name"
            },
            {
                "meta": {
                    "value": false,
                    "options": [
                        {
                            "label": "Agent",
                            "value": "agent"
                        },
                        {
                            "label": "End User",
                            "value": "end-user"
                        },
                        {
                            "label": "Admin",
                            "value": "admin"
                        }
                    ],
                    "description": "Select the role of the user to be updated.",
                    "displayName": "Role",
                    "displayType": "select",
                    "placeholder": "Select User role"
                },
                "name": "role"
            },
            {
                "meta": {
                    "config": {
                        "url": "integrations/options",
                        "body": {
                            "name": "zendesk",
                            "secret": "{{parameters.secret}}",
                            "resource": "user",
                            "operation": "user.update",
                            "loadOptionsMethod": "getGroups"
                        },
                        "method": "post",
                        "urlType": "options",
                        "labelKey": "name",
                        "valueKey": "id"
                    },
                    "options": [],
                    "description": "Select the default group you want to assign the user to be updated.",
                    "displayName": "Group",
                    "displayType": "select",
                    "placeholder": "Select the default group of the user"
                },
                "name": "default_group_id"
            },
            {
                "meta": {
                    "value": "",
                    "description": "Enter the details you have about the user.",
                    "displayName": "Details",
                    "displayType": "textarea",
                    "placeholder": "Enter user details"
                },
                "name": "details"
            },
            {
                "meta": {
                    "value": "",
                    "description": "Enter the notes you have about the user.",
                    "displayName": "Notes",
                    "displayType": "textarea",
                    "placeholder": "Enter user notes"
                },
                "name": "notes"
            }
        ]
    },
    "getlist": {
        "definition": {
            "qs": {
                "role": "{{parameters.role}}"
            },
            "url": "https://{{secrets.subdomain}}.zendesk.com/api/v2/users",
