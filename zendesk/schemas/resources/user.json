                "error": {
                    "code": "{{response.status}}",
                    "message": "{{response.data.error}}"
                },
                "output": "{{response.data.users}}"
            },
            "pagination": {
                "qs": {
                    "page[size]": 10,
                    "page[after]": "{{response.data.meta.after_cursor}}"
                },
                "type": "cursor",
                "default": {
                    "page[size]": 10,
                    "page[after]": null
                },
                "condition": "{{response.data.meta.has_more}} !== false"
            }
        },
        "parameters": [
            {
                "meta": {
                    "value": "end-user",
                    "options": [
